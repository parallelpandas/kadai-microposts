<% if current_user.liked?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-link btn-sm") do %>
      <%= content_tag :span, '', class: "glyphicon glyphicon-star" %>
    <% end %>
    
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-link btn-sm") do %>
      <%= content_tag :span, '', class: "glyphicon glyphicon-star-empty" %>
    <% end %>
  <% end %>
<% end %>